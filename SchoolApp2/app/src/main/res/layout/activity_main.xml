<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp">

            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/location"/>
            <TextView
                android:id="@+id/tv_location"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:text="定位"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_placeSelect"
            android:paddingLeft="60dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_search"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="选择地点"/>
            <ImageView
                android:paddingLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/search"/>
        </LinearLayout>
    </LinearLayout>

    <!--android:background="@color/rosybrown"-->
    <LinearLayout

        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_hotel"
            android:layout_margin="3dp"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒店"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_scenery"
            android:layout_margin="3dp"
            android:background="@drawable/selector"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView

                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="景点"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="3dp"
            android:id="@+id/ll_food"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView

                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美食"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:background="@drawable/selector"
            android:id="@+id/ll_shoppingstore"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺"/>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_forum"
            android:layout_margin="3dp"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="论坛"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_travle"
            android:layout_margin="3dp"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView

                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旅游"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shopping"
            android:layout_margin="3dp"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView

                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_other"
            android:layout_margin="3dp"
            android:background="@drawable/selector"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"/>
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"/>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LV_IndexListView"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>
